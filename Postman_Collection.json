{
    "info": {
        "name": "Car Rental System API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Admin Login",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Public - QR Booking Flow",
            "item": [
                {
                    "name": "1. Init Booking (OTP)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"vehicle_id\": 1,\n    \"phone\": \"+1234567890\",\n    \"full_name\": \"John Doe\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "rentals",
                                "init"
                            ]
                        }
                    }
                },
                {
                    "name": "2. Verify OTP & Create Rental",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customer_id\": 1,\n    \"otp\": \"123456\",\n    \"vehicle_id\": 1,\n    \"start_date\": \"2024-06-01 10:00:00\",\n    \"end_date\": \"2024-06-05 10:00:00\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "rentals",
                                "verify"
                            ]
                        }
                    }
                },
                {
                    "name": "3. Upload Document",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "rental_id",
                                    "value": "1",
                                    "type": "text"
                                },
                                {
                                    "key": "type",
                                    "value": "LICENSE",
                                    "type": "text"
                                },
                                {
                                    "key": "document",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "documents",
                                "upload"
                            ]
                        }
                    }
                },
                {
                    "name": "4. Process Payment",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"rental_id\": 1,\n    \"amount\": 500.00,\n    \"payment_type\": \"RENTAL_FEE\",\n    \"payment_method\": \"ONLINE\",\n    \"transaction_id\": \"TXN_998877\",\n    \"idempotency_key\": \"unique-key-123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "payments"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin - Management",
            "item": [
                {
                    "name": "Activate Rental",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{adminToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "rentals",
                                "1",
                                "activate"
                            ]
                        }
                    }
                },
                {
                    "name": "Approve Document",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{adminToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "PUT",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"APPROVED\",\n    \"feedback\": \"Looks good\",\n    \"expiry_date\": \"2025-12-31\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "documents",
                                "1",
                                "verify"
                            ]
                        }
                    }
                },
                {
                    "name": "Export Report",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{adminToken}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "url": {
                            "base": "{{baseUrl}}",
                            "path": [
                                "reports",
                                "export"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "adminToken",
            "value": "your_jwt_here"
        }
    ]
}